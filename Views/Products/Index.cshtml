@model List<Product>
@{
}
<h2>Product List</h2>
<table class="table">
    <thead>
        <tr>
            <th> Product ID</th>
            <th> Product Name</th>
            <th> Description</th>
            <th> Price</th>
            <th> Category </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                @* <td>@product.Category</td> *@
                <td><a href="Products/View/@product.Id">Edit</a></td>
            </tr>
        }
        
    </tbody>
</table>
